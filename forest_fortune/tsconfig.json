{
  "compilerOptions": {
    "target": "ES2020",                   // modern JS features
    "module": "CommonJS",                   // enable ESM (import/export)
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}